{
  "name": "oas-reducer",
  "version": "3.0.0",
  "description": "Reduce an OpenAPI definition into a smaller subset.",
  "license": "ISC",
  "main": "src/index.js",
  "bin": {
    "oas-reducer": "bin/oas-reducer"
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/readmeio/oas-reducer.git"
  },
  "bugs": {
    "url": "https://github.com/readmeio/oas-reducer/issues"
  },
  "keywords": [
    "openapi",
    "oas",
    "reducer"
  ],
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install",
    "pretest": "npm run lint",
    "prettier": "prettier --list-different --write \"./**/**.js\"",
    "release": "npx conventional-changelog-cli -i CHANGELOG.md -s && git add CHANGELOG.md",
    "test": "jest --coverage"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "inquirer": "^8.1.2",
    "inquirer-fuzzy-path": "^2.3.0",
    "jsonpath": "^1.1.1",
    "jsonpointer": "^5.0.0",
    "oas-normalize": "^6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@readme/eslint-config": "^8.5.1",
    "@readme/oas-examples": "^5.0.0",
    "eslint": "^8.11.0",
    "husky": "^8.0.1",
    "jest": "^28.0.3",
    "prettier": "^2.6.0"
  },
  "prettier": "@readme/eslint-config/prettier",
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        "Infinity"
      ],
      "footer-max-line-length": [
        0,
        "always",
        "Infinity"
      ]
    }
  }
}
