{
  "name": "oas-reducer",
  "version": "1.0.1",
  "description": "Reduce an OpenAPI definition into a smaller subset.",
  "license": "ISC",
  "main": "src/index.js",
  "bin": {
    "oas-reducer": "bin/oas-reducer"
  },
  "engines": {
    "node": "^12 || ^14 || ^16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/readmeio/oas-reducer.git"
  },
  "bugs": {
    "url": "https://github.com/readmeio/oas-reducer/issues"
  },
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install",
    "pretest": "npm run lint",
    "prettier": "prettier --list-different --write \"./**/**.js\"",
    "release": "conventional-changelog -i CHANGELOG.md -s",
    "test": "jest --coverage"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "inquirer": "^8.1.2",
    "inquirer-fuzzy-path": "^2.3.0",
    "jsonpath": "^1.1.1",
    "jsonpointer": "^4.1.0",
    "oas-normalize": "^3.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@readme/eslint-config": "^5.2.0",
    "@readme/oas-examples": "^4.2.0",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.31.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2"
  },
  "prettier": "@readme/eslint-config/prettier",
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        "Infinity"
      ],
      "footer-max-line-length": [
        0,
        "always",
        "Infinity"
      ]
    }
  }
}
